# Auth0 Configuration (Server-side - for Cloudflare environment variables)
AUTH0_SECRET=your-auth0-secret-here # Generate with: openssl rand -base64 32
AUTH0_BASE_URL=https://chat.pharmx.co.uk
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.pharmx.co.uk

# Auth0 Configuration (Client-side - for browser)
NEXT_PUBLIC_AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Cloudflare D1 Database (automatically available in Workers environment)
# No need to set DATABASE_URL for D1

# Application
NEXT_PUBLIC_APP_URL=https://chat.pharmx.co.uk
